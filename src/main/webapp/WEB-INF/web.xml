<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Topjava</display-name>

    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.UserServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>mealServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.MealServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mealServlet</servlet-name>
        <url-pattern>/meals</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>newMeal</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.NewMealServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>newMeal</servlet-name>
        <url-pattern>/new</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteMeal</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.DeleteMealServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteMeal</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateMeal</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.UpdateMealServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateMeal</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>prepareToUpdateMeal</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.PrepareToUpdateMealServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>prepareToUpdateMeal</servlet-name>
        <url-pattern>/prepareUpdate</url-pattern>
    </servlet-mapping>

</web-app>
